<%- include('../layouts/header'); -%>
<div class ="compra-container">

    <form action="/admin/agregar" method="GET">
        <button class="btn btn-success btn-block btn-lg agregar"> Agregar comida</button>
    </form>
    <form action="/admin/editar/:id" method="GET">
    <h2>Frutas</h2>
       <% for(var i = 0; i < comidas.length; i++){ %>
           <% if(comidas[i].categoria == 'frutas'){ %>
           <div class="comida-container">
               <div class="div-separador">
                   <div>
                       <h3>Imagen</h3>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Nombre</h3>
                   </div>
                   <div class="comida-info">
                       <%= comidas[i].nombre %>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Cantidad</h3>
                   </div>
                   <div class="comida-info">
                       <%= comidas[i].cantidad %>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Precio/Kg</h3>
                   </div>
                   <div class="comida-info">
                       <%= comidas[i].precio %>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Cantidad a Elegir</h3>
                       <input type="number" name="<%= comidas[i].nombre %>" value="0">
                   </div>
               </div>
               <div class="div-separador">
                   <div class="abajo">
                       <button class="btn btn-primary"> Editar </button>
                   </div>
               </div>
           </div>
           <% } %>
       <% } %>
    
       <h2>Carnes</h2>
    
       <% for(var i = 0; i < comidas.length; i++){ %>
           <% if(comidas[i].categoria == 'carnes'){ %>
           <div class="comida-container">
               <div class="div-separador">
                   <div>
                       <h3>Imagen</h3>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Nombre</h3>
                   </div>
                   <div class="comida-info">
                       <%= comidas[i].nombre %>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Cantidad</h3>
                   </div>
                   <div class="comida-info">
                       <%= comidas[i].cantidad %>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Precio/Kg</h3>
                   </div>
                   <div class="comida-info">
                       <%= comidas[i].precio %>
                   </div>
               </div>
               <div class="div-separador">
                   <div>
                       <h3>Cantidad a Elegir</h3>
                       <input type="number"name="<%= comidas[i].nombre %>" value="0">
                   </div>
               </div>
               <div class="div-separador">
                    <div class="abajo">
                        <button class="btn btn-primary"> Editar </button>
                    </div>
            </div>
           </div>
           <% } %>
       <% } %>

    </form>
</div>
<%- include('../layouts/footer'); -%>
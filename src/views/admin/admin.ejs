                    <h4 style="text-align: center;">Imagen</h4>
                    <div>
                        <img src="/imagenes/<%= comidas[i].imagen %>" alt="">
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <h4 style="text-align: center;">Nombre</h4>
                    <div class="comida-info mt-3" style="text-align: center;">
                        <%= comidas[i].nombre %>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div>
                        <h4 style="text-align: center;">Cantidad</h4>
                    </div>
                    <div class="comida-info mt-3" style="text-align: center;">
                        <%= comidas[i].cantidad %>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div>
                        <h4 style="text-align: center;">Precio/Kg</h4>
                    </div>
                    <div class="comida-info mt-3" style="text-align: center;">
                        <%= comidas[i].precio %>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="abajo">
                        <a href="/admin/editar/<%= comidas[i]._id %>" class="btn btn-primary mr-1">Editar</a>
                        <a href="/admin/eliminar/<%= comidas[i]._id %>" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
                <% } %>
                <% } %>
            </div>
        </div>
    </div>

</div>
<%- include('../layouts/footer'); -%>
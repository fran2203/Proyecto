<%- include('../layouts/header'); -%>
<div class="container mt-4 mb-5" id="agregar-container">
    <div class="card">
        <div class="card-body">
            <form action="/admin/agregar" method="POST" enctype="multipart/form-data" >
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" id="name" class="form-control" name="nombre" placeholder="Nombre de la comida" required>
                </div>
                <div class="form-group">
                    <label for="category" class="form-label">Categoria</label>
                    <input list="category-list" id="category" class="form-control" name="categoria" placeholder="CategorÃ­a de la comida" required>
                    <datalist id="category-list">
                        <option value="frutas">
                        <option value="carnes">
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="quantity">Cantidad de comida</label>
                    <input type="number" class="form-control" name="cantidad" value="0" required>
                </div>
                <div class="form-group">
                    <label for="price">Precio de la comida</label>
                    <input type="number" class="form-control" name="precio" id="price" value="0" required>
                </div>
                <div class="form-group">
                    <label for="imagen" class="form-label">Inserte una imagen</label>
                    <input class="form-control-file" type="file" id="imagen" name="img" required>
                </div>
                <button type="submit" class="btn btn-success mt-3" id="add-food-btn" >Agregar Comida</button>
            </form>
        </div>
    </div>
</div>

<%- include('../layouts/footer'); -%>